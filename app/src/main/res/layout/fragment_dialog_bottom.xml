<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_add_favourite_action"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@android:color/white"
        android:drawableStart="@drawable/ic_bookmark"
        android:drawablePadding="32dp"
        android:gravity="start|center_vertical"
        android:text="Save for later"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_remove_favourite_action"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@android:color/white"
        android:drawableStart="@drawable/ic_bookmark"
        android:drawablePadding="32dp"
        android:gravity="start|center_vertical"
        android:text="Remove"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_share_action"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@android:color/white"
        android:drawableStart="@drawable/ic_share"
        android:drawablePadding="32dp"
        android:gravity="start|center_vertical"
        android:text="Share"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_open_action"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@android:color/white"
        android:drawableStart="@drawable/ic_open_website"
        android:drawablePadding="32dp"
        android:gravity="start|center_vertical"
        android:text="Read Article"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_copy_link_action"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@android:color/white"
        android:drawableStart="@drawable/ic_content_copy"
        android:drawablePadding="32dp"
        android:gravity="start|center_vertical"
        android:text="Copy Link"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

</LinearLayout>
